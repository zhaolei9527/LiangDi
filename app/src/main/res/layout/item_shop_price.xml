<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/SimpleDraweeView"
            android:layout_width="@dimen/x107"
            android:layout_height="@dimen/x107"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x8"
            fresco:actualImageScaleType="fitXY"
            fresco:placeholderImage="@drawable/imgloading" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x143"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/y12"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="#333333"
            android:textSize="@dimen/x13" />

        <TextView
            android:id="@+id/tv_classify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/view"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginLeft="@dimen/x143"
            android:maxLength="12"
            android:maxLines="1"
            android:textColor="#F0667F"
            android:textSize="@dimen/x17" />

        <TextView
            android:id="@+id/tv_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/view"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginLeft="@dimen/x143"
            android:layout_marginRight="@dimen/x10"
            android:gravity="center"
            android:maxLength="9"
            android:maxLines="1"
            android:textColor="#999999"
            android:textSize="@dimen/x11" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_look"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/x143"
            android:layout_marginRight="@dimen/x10"
            android:gravity="center"
            android:maxLength="9"
            android:maxLines="1"
            android:textColor="#999999"
            android:textSize="@dimen/x11" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/SimpleDraweeView"
            android:layout_marginTop="@dimen/x5"
            android:background="#cccccc"></View>

    </RelativeLayout>

</FrameLayout>
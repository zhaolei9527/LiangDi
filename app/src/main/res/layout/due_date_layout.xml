<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x42"
            android:background="#fbfbfb"
            android:visibility="visible">

            <FrameLayout
                android:id="@+id/rl_back"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@mipmap/fanhui" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="预产期设置"
                android:textColor="#333333"
                android:textSize="@dimen/x16" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y43"
            android:layout_marginLeft="@dimen/x10"
            android:background="#EEEEEE"
            android:gravity="center_vertical"
            android:text="您的预产期是哪一天？？"
            android:textColor="#999"
            android:textSize="@dimen/x13" />

        <RelativeLayout
            android:id="@+id/rl_chanqi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y41"
            android:background="#fff">

            <ImageView
                android:id="@+id/img_chanqi"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:src="@mipmap/jingqi2" />

            <TextView
                android:id="@+id/tv_chanqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/x8"
                android:layout_toRightOf="@id/img_chanqi"
                android:text="设置预产期"
                android:textColor="#333"
                android:textSize="@dimen/x14" />

            <TextView
                android:id="@+id/tv_chanqitime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10"
                android:layout_toLeftOf="@id/img"
                android:textColor="#666"
                android:textSize="@dimen/x14" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10"
                android:src="@mipmap/you" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccc"></View>

    </LinearLayout>

</RelativeLayout>

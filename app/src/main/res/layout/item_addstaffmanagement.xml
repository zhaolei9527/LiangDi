<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/x5"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x5">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img"
            android:layout_width="@dimen/y38"
            android:layout_height="@dimen/y38"
            android:layout_below="@id/view"
            android:layout_marginLeft="@dimen/x8"
            android:layout_marginTop="@dimen/x10"
            fresco:placeholderImage="@drawable/imgloading"
            fresco:roundAsCircle="true" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:layout_below="@id/tv_fuwuma"
            android:background="#efefef"></View>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="aaaaaaaa"
            android:textColor="#333333"
            android:textSize="@dimen/x14" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x5"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="aaaaaaaa"
            android:textColor="#666"
            android:textSize="@dimen/x12" />

        <Button
            android:id="@+id/btn_add_address"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/y23"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:background="@drawable/tianjiaan"
            android:text="添加为员工"
            android:textColor="@color/white" />

    </RelativeLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:background="#fbfbfb"
        android:visibility="visible">

        <FrameLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@mipmap/fanhui" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提现申请"
            android:textColor="#333333"
            android:textSize="@dimen/x16" />


        <TextView
            android:id="@+id/tv_withdrawl_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:text="提现记录"
            android:textColor="#333333"
            android:textSize="@dimen/x16" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_bank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:layout_marginLeft="@dimen/x20"
        android:gravity="center_vertical"
        android:textColor="@color/text333"
        android:textSize="@dimen/x15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x5"
        android:background="#efefef"></View>

    <EditText
        android:id="@+id/et_money"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:background="@null"
        android:hint="申请金额"
        android:inputType="numberDecimal"
        android:maxLength="8"
        android:paddingLeft="@dimen/x20"
        android:textColor="@color/text333"
        android:textColorHint="@color/text333"
        android:textSize="@dimen/x15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#efefef"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x42"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x20"
            android:text="可提现金额"
            android:textColor="#666"
            android:textSize="@dimen/x15" />


        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/x13" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#efefef"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x10">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#efefef"></View>


        <EditText
            android:id="@+id/et_phonecode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_yanzheng"
            android:background="@null"
            android:hint="短信验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="@dimen/x20"
            android:singleLine="true"
            android:textSize="@dimen/x15" />

        <Button
            android:id="@+id/btn_getSMScode"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:background="@drawable/bg_register_btn"
            android:text="获取验证码"
            android:textColor="@color/white" />

    </RelativeLayout>


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x40"
        android:background="@drawable/bg_register_btn"
        android:text="确认提现"
        android:textColor="@color/white" />


</LinearLayout>

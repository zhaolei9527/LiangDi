<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zhuce"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/x184"
                android:layout_height="@dimen/y57"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y23"
                android:background="@drawable/loginlogo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y20"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/x264"
                    android:layout_height="@dimen/y30"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/img_user"
                        android:layout_width="@dimen/x21"
                        android:layout_height="@dimen/x21"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/user" />

                    <EditText
                        android:id="@+id/et_account"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_toRightOf="@id/img_user"
                        android:background="@null"
                        android:hint="请输入手机号"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/pressedColor"
                        android:textColorHint="@color/pressedColor"
                        android:textSize="@dimen/x13" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/pressedColor"></View>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/x264"
                    android:layout_height="@dimen/y30"
                    android:layout_marginTop="@dimen/x10">

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/pressedColor"></View>

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="@dimen/x21"
                        android:layout_height="@dimen/x21"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/yanzheng" />

                    <EditText
                        android:id="@+id/et_code"
                        android:layout_width="@dimen/x130"
                        android:layout_height="@dimen/y30"
                        android:layout_above="@+id/view"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_toRightOf="@+id/imageView"
                        android:background="@null"
                        android:hint="验证码"
                        android:inputType="number"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:textColor="@color/pressedColor"
                        android:textColorHint="@color/pressedColor"
                        android:textSize="@dimen/x13" />

                    <TextView
                        android:id="@+id/tv_changecode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="换一张"
                        android:textColor="@color/pressedColor" />

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@id/tv_changecode"
                        android:src="@mipmap/ic_launcher" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/x264"
                    android:layout_height="@dimen/y30"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/x10">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/pressedColor"></View>

                    <ImageView
                        android:id="@+id/img_yanzheng"
                        android:layout_width="@dimen/x21"
                        android:layout_height="@dimen/x21"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/yanzheng" />

                    <EditText
                        android:id="@+id/et_phonecode"
                        android:layout_width="@dimen/x135"
                        android:layout_height="@dimen/y30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_toRightOf="@id/img_yanzheng"
                        android:background="@null"
                        android:hint="短信验证码"
                        android:inputType="number"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:textColor="@color/pressedColor"
                        android:textColorHint="@color/pressedColor"
                        android:textSize="@dimen/x13" />

                    <Button
                        android:id="@+id/btn_getSMScode"
                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/y26"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_register_btn"
                        android:text="获取验证码"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/x264"
                    android:layout_height="@dimen/y30"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/x10">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/pressedColor"></View>

                    <ImageView
                        android:id="@+id/img_lock"
                        android:layout_width="@dimen/x21"
                        android:layout_height="@dimen/x21"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/lock" />

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_toRightOf="@id/img_lock"
                        android:background="@null"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:maxLength="18"
                        android:singleLine="true"
                        android:textColor="@color/pressedColor"
                        android:textColorHint="@color/pressedColor"
                        android:textSize="@dimen/x13" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/x264"
                    android:layout_height="@dimen/y30"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/x10">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/pressedColor"></View>

                    <ImageView
                        android:id="@+id/img_lock2"
                        android:layout_width="@dimen/x21"
                        android:layout_height="@dimen/x21"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/lock" />

                    <EditText
                        android:id="@+id/et_passwordagain"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_toRightOf="@id/img_lock2"
                        android:background="@null"
                        android:hint="请再次输入密码"
                        android:inputType="textPassword"
                        android:maxLength="18"
                        android:singleLine="true"
                        android:textColor="@color/pressedColor"
                        android:textColorHint="@color/pressedColor"
                        android:textSize="@dimen/x13" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/x264"
                    android:layout_height="@dimen/y30"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/x10">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/pressedColor"></View>

                    <ImageView
                        android:id="@+id/img_tuijian"
                        android:layout_width="@dimen/x21"
                        android:layout_height="@dimen/x21"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/tuijian" />

                    <EditText
                        android:id="@+id/et_tuijian"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_toRightOf="@id/img_tuijian"
                        android:background="@null"
                        android:hint="推荐人手机号"
                        android:inputType="number"
                        android:maxLength="18"
                        android:singleLine="true"
                        android:textColor="@color/pressedColor"
                        android:textColorHint="@color/pressedColor"
                        android:textSize="@dimen/x13" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/x5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*注册即同意"
                        android:textColor="@color/pressedColor"
                        android:textSize="@dimen/x10" />

                    <TextView
                        android:id="@+id/tv_xieyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《靓蒂女神用户注册协议》"
                        android:textColor="@color/pressedColor"
                        android:textSize="@dimen/x10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="和"
                        android:textColor="@color/pressedColor"
                        android:textSize="@dimen/x10" />

                    <TextView
                        android:id="@+id/tv_shengming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《免责声明》"
                        android:textColor="@color/pressedColor"
                        android:textSize="@dimen/x10" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="@dimen/x264"
                    android:layout_height="@dimen/y40"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/x15"
                    android:background="@drawable/bg_login_btn"
                    android:text="注册"
                    android:textAllCaps="false"
                    android:textColor="@color/pressedColor"
                    android:textSize="@dimen/x15"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="@dimen/x264"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/x10">

                    <View
                        android:layout_width="@dimen/x100"
                        android:layout_height="1px"
                        android:layout_centerVertical="true"
                        android:background="@color/pressedColor"></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="授权注册"
                        android:textColor="@color/pressedColor" />

                    <View
                        android:layout_width="@dimen/x100"
                        android:layout_height="1px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/pressedColor"></View>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="@dimen/x264"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/x20"
                    android:layout_marginTop="@dimen/x10"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_weixin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x30"
                        android:background="@mipmap/lwechat" />

                    <ImageView
                        android:id="@+id/img_qq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/qq" />

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/y13">

            <TextView
                android:id="@+id/tv_change_price_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-09-12 16：49：10"
                android:textColor="#777"
                android:textSize="@dimen/x12" />

            <TextView
                android:id="@+id/tv_change_price_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="退货退款：待审核"
                android:textColor="#777"
                android:textSize="@dimen/x12" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x2"
            android:layout_marginTop="@dimen/x2"
            android:background="#efefef"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/SimpleDraweeView"
                android:layout_width="@dimen/x67"
                android:layout_height="@dimen/x67"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                fresco:placeholderImage="@drawable/imgloading" />

            <TextView
                android:id="@+id/tv_change_price_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/y17"
                android:layout_toRightOf="@id/SimpleDraweeView"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="苏菲安心裤超熟睡裤型量大夜用防漏安心裤L码2片*10包组合"
                android:textColor="#333333"
                android:textSize="@dimen/x13" />

            <TextView
                android:id="@+id/tv_change_price_classify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:layout_toRightOf="@id/SimpleDraweeView"
                android:text="¥ 89.90"
                android:textColor="#F0667F"
                android:textSize="@dimen/x17" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:text="x3"
                android:textSize="@dimen/x15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#cccccc"></View>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center_vertical|end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_delete_change_price"
                android:layout_width="@dimen/x75"
                android:layout_height="@dimen/y25"
                android:layout_marginRight="@dimen/x5"
                android:background="@drawable/btn_delete_selector"
                android:text="取消"
                android:textColor="@drawable/btn_textdelete_selector"
                android:textSize="@dimen/x13" />

            <Button
                android:id="@+id/btn_return_price_content"
                android:layout_width="@dimen/x75"
                android:layout_height="@dimen/y25"
                android:layout_marginRight="@dimen/x5"
                android:background="@drawable/btn_goodpay_selector"
                android:text="查看详情"
                android:textColor="#fff"
                android:textSize="@dimen/x13" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x5"
        android:background="#efefef"></View>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    android:background="#eee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x42"
            android:background="#fbfbfb"
            android:visibility="visible">

            <FrameLayout
                android:id="@+id/rl_back"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@mipmap/fanhui" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="辣妈设置"
                android:textColor="#333333"
                android:textSize="@dimen/x16" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y43"
            android:layout_marginLeft="@dimen/x10"
            android:background="#EEEEEE"
            android:gravity="center_vertical"
            android:text="选择宝宝性别？"
            android:textColor="#999"
            android:textSize="@dimen/x13" />

        <RelativeLayout
            android:id="@+id/rl_baby_sex"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y41"
            android:background="#fff">

            <ImageView
                android:id="@+id/img_baby_sex"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:src="@mipmap/xingbie" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/x8"
                android:layout_toRightOf="@id/img_baby_sex"
                android:text="宝宝性别"
                android:textColor="#333"
                android:textSize="@dimen/x14" />

            <TextView
                android:id="@+id/tv_baby_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10"
                android:layout_toLeftOf="@id/img"
                android:textColor="#666"
                android:textSize="@dimen/x14" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10"
                android:src="@mipmap/you" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccc"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y43"
            android:layout_marginLeft="@dimen/x10"
            android:background="#EEEEEE"
            android:gravity="center_vertical"
            android:text="宝宝是在哪天出生的？"
            android:textColor="#999"
            android:textSize="@dimen/x13" />

        <RelativeLayout
            android:id="@+id/rl_baby_born"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y41"
            android:background="#fff">

            <ImageView
                android:id="@+id/img_baby_born"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:src="@mipmap/chusheng" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/x8"
                android:layout_toRightOf="@id/img_baby_born"
                android:text="宝宝出生日"
                android:textColor="#333"
                android:textSize="@dimen/x14" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10"
                android:src="@mipmap/you" />

            <TextView
                android:id="@+id/tv_baby_born_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10"
                android:layout_toLeftOf="@id/img1"
                android:textColor="#666"
                android:textSize="@dimen/x14" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccc"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y43"
            android:layout_marginLeft="@dimen/x10"
            android:background="#EEEEEE"
            android:gravity="center_vertical"
            android:text="您的经期大概持续几天？"
            android:textColor="#999"
            android:textSize="@dimen/x13" />

        <RelativeLayout
            android:id="@+id/rl_jingqi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y41"
            android:background="#fff">

            <ImageView
                android:id="@+id/img_jingqi"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:src="@mipmap/jingqi2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/x8"
                android:layout_toRightOf="@id/img_jingqi"
                android:text="经期长度"
                android:textColor="#333"
                android:textSize="@dimen/x14" />


            <ImageView
                android:id="@id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10"
                android:src="@mipmap/you" />

            <TextView
                android:id="@+id/tv_jingqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10"
                android:layout_toLeftOf="@id/img"
                android:textColor="#666"
                android:textSize="@dimen/x14" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccc"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y43"
            android:layout_marginLeft="@dimen/x10"
            android:background="#EEEEEE"
            android:gravity="center_vertical"
            android:text="两次月经开始日大概间隔多久？"
            android:textColor="#999"
            android:textSize="@dimen/x13" />

        <RelativeLayout
            android:id="@+id/rl_zhouqi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y41"
            android:background="#fff">

            <ImageView
                android:id="@+id/img_zhouqi"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:src="@mipmap/zhouqi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/x8"
                android:layout_toRightOf="@id/img_zhouqi"
                android:text="周期长度"
                android:textColor="#333"
                android:textSize="@dimen/x14" />

            <ImageView
                android:id="@id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10"
                android:src="@mipmap/you" />

            <TextView
                android:id="@+id/tv_zhouqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10"
                android:layout_toLeftOf="@id/img"
                android:textColor="#666"
                android:textSize="@dimen/x14" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccc"></View>

    </LinearLayout>

</RelativeLayout>

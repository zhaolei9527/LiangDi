<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/x5"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_fuwuma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:paddingLeft="@dimen/x10"
            android:text="注册时间：2014-09-25 10:24"
            android:textColor="#666" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img"
            android:layout_width="@dimen/y38"
            android:layout_height="@dimen/y38"
            android:layout_below="@id/view"
            android:layout_marginLeft="@dimen/x8"
            android:layout_marginTop="@dimen/x10"
            fresco:placeholderImage="@drawable/imgloading"
            fresco:roundAsCircle="true" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:layout_below="@id/tv_fuwuma"
            android:background="#efefef"></View>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/x100"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_marginLeft="@dimen/x75"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="花开一半"
            android:textColor="#333333"
            android:textSize="@dimen/x14" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="@dimen/x75"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="账号：qiqiwangluo7777"
            android:textColor="#666"
            android:textSize="@dimen/x11" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_time"
            android:layout_marginLeft="@dimen/x75"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x5"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="最后登录时间：2017-09-25 10:24"
            android:textColor="#666"
            android:textSize="@dimen/x11" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号：18135698779"
                android:textColor="#666"
                android:textSize="@dimen/x11" />


            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id：35432513546542"
                android:textColor="#666"
                android:textSize="@dimen/x11" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x5"
            android:layout_below="@id/tv_phone"
            android:layout_marginTop="@dimen/x10"
            android:background="#efefef"></View>

    </RelativeLayout>

</FrameLayout>